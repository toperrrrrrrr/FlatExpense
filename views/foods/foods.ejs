<!DOCTYPE html>
<html lang="en">


<%- include('../partials/partials-head.ejs') %>

    <body>

        <%- include('../partials/partials-nav-bar.ejs') %>

            <%- include('../partials/partials-aside.ejs') %>

                <main id="main" class="main">
                    <div class="pagetitle">
                        <h3>Good <span id="ampm"></span>
                            </span>
                        </h3>
                        <nav>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active" id="date"></li>
                                <li class="breadcrumb-item" id="time"></li>
                            </ol>
                        </nav>
                    </div>
                    <!-- End Page Title -->

                    <section class="section dashboard">
                        <div class="row">
                            <!-- Left side columns -->
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-xxl-12 col-md-12 ">
                                        <div class="card info-card">
                                            <div class="card-body">
                                                <h5 class="card-title">Food List: </h5>
                                                <div class="row">
                                                    <% if (foods.length===0) { %>
                                                        <div class="centered-container card">
                                                            <p>No foods available.</p>
                                                        </div>
                                                        <% } else { %>
                                                            <% foods.forEach(food=> { %>
                                                                <div class="col-lg-4 p-3 text-white">
                                                                    <div class="card">
                                                                        <div class="card-body">
                                                                            <h4 class="card-title">
                                                                                <%= food.foodName %>
                                                                            </h4>
                                                                            <p class="card-text">
                                                                                <%= food.foodDescription %>
                                                                            </p>
                                                                            <p class="card-text">
                                                                                <%= food.foodPrice %>
                                                                            </p>
                                                                            <a href="#">
                                                                                <%= food.foodLink %>
                                                                            </a>
                                                                            <h6>
                                                                                <%= food.foodRate %>
                                                                            </h6 class="card-text">
                                                                            <a
                                                                                href="/foods/delete/<%= food.foodID %>"><button>Delete</button></a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <% }); %>
                                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <form action="#" style="background-color: black;">
                                    <button class="" type="button" data-bs-toggle="modal" data-bs-target="#addFood"
                                        style="border-radius: 100%; height: 70px; width: 70px; padding: 0;">AddItem</button>
                                    <button class="btn btn-primary" type="button" data-bs-toggle="modal"
                                        data-bs-target="#deleteFoods"
                                        style="border-radius: 100%; height: 70px; width: 70px; padding: 0;">Delete
                                        Items</button>
                                </form>

                                <div class="modal fade" id="deleteFoods">
                                    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-md">
                                        <div class="modal-content">
                                            <!-- Modal body -->
                                            <div class="modal-body">
                                                <div class="container mt-3">
                                                    <h2>Are You Sure You want to Delete All Foods?</h2>
                                                    <p>reconsider</p>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <a href="/foods/delete"><button type="button"
                                                        class="btn btn-primary">Delete
                                                        Foods</button></a>
                                                <button type="button" class="btn btn-danger"
                                                    data-bs-dismiss="modal">Nope</button>
                                            </div>
                                            <!-- Modal footer -->
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade" id="addFood">
                                    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
                                        <div class="modal-content">
                                            <!-- Modal body -->
                                            <div class="modal-body">
                                                <div class="container mt-3">
                                                    <h2>Add New Food</h2>
                                                    <p>Some instructions on how to add new foods</p>
                                                    <form action="/foods/addFood" method="post">
                                                        <div class="row">
                                                            <div class="col">
                                                                <label for="foodName">Item name:</label>
                                                                <input type="text" class="form-control"
                                                                    placeholder="Item name" name="foodName">
                                                            </div>
                                                            <div class="col">
                                                                <label for="foodPrice">Recipe price:</label>
                                                                <input type="text" class="form-control"
                                                                    placeholder="Price (optional)" name="foodPrice">
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col">
                                                                <label for="foodDescription">Description:</label>
                                                                <textarea class="form-control" rows="3"
                                                                    id="foodDescription"
                                                                    name="foodDescription"></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col">
                                                                <label for="foodLink">link :</label>
                                                                <textarea class="form-control" rows="1" id="foodLink"
                                                                    name="foodLink" placeholder="link"></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-primary">Save</button>
                                                            <button type="button" class="btn btn-danger"
                                                                data-bs-dismiss="modal">Close</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                            <!-- Modal footer -->
                                        </div>
                                    </div>
                                </div>
                    </section>
                </main>




                <script src="/bootstrap/js/bootstrap.js"></script>
                <script src="./script/vendor.js"></script>
                <script src="./script/scripts.js"></script>

    </body>

</html>