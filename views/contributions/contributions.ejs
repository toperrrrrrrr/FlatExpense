<%- include('../partials/partials-main-body-top.ejs') %>

    <div class="h-100 d-flex align-items-center justify-content-center">
        <div class="centered-container container-fluid overflow-auto" style="scrollbar-width:none;">
            <h1> Add New contributions</h1>
            <form action="/contributions/addContributions" method="post">
                <div class="row">
                    <div class="col ">
                        <label for="member">Member</label>
                        <select class="form-select" aria-label="Member" name="user_id">
                            <option selected>Select User</option>
                            <% users.forEach(user=> { %>
                                <option value="<%= user.user_id%>">
                                    <%= user.user_name %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                    <div class="col">
                        <label for="Amount">Amount:</label>
                        <input type="text" class="form-control" placeholder="Amount" name="amount">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
            <div class="table-responsive mt-3">
                <table class="table table-striped" style="height: inherit;">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% table.forEach(table=> { %>
                            <tr>
                                <td>
                                    <%= table.id %>
                                </td>
                                <td>
                                    <%= table.user_name %>
                                </td>
                                <td>
                                    <%= table.amount%>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <% total.forEach(total=> { %>

                <%= total.Total %>

                    <% }); %>
        </div>
    </div>
    <%- include('../partials/partials-main-body-bottom.ejs') %>