<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pareng Raymond</title>
    <!-- <link rel="icon" type="image/x-icon" href="/img/favicon.ico"> -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">

</head>

<body class="prevent-select" style="overflow: hidden;">

    <%- include('partials/partials-offcanvas.ejs') %>
        <div class="container-fluid">
            <%- include('partials/partials-nav-bar.ejs') %>

            <div class="h-100 d-flex align-items-center justify-content-center">
                <div class="centered-container d-flex flex-column justify-content-around">
                    <form action="/user/register" method="POST" class="forms" name="registrationForm">
                        <h1>Register</h1>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="text" name="username" id="username" placeholder="username" class="form-control"
                                placeholder="Enter Username" autocomplete="username">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Password"
                                autocomplete="current-password">
                        </div>
                        <button type="submit" class="btn btn-primary" id="formSubmit">Submit</button>
                        <a href="/user/allusers"><button class="btn btn-secondary" type="button">Check Users</button></a>
                    </form>
                </div>
            </div>

        </div>
        <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="./script/vendor.js"></script>
        <script src="./script/scripts.js"></script>
</body>
</html>